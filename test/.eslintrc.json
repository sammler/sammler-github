{
  "env": {
    "browser": false,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "plugins": [
    "mocha"
  ],
  "rules": {
    "mocha/no-exclusive-tests": "error",
    "no-inline-comments": "off",
    "no-undef": "off",
    "no-unused-vars": "off",
    "on-unused-expressions": "off"
  }
}
