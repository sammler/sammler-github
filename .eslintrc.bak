{
    "ecmaFeatures": {
        "modules": true,
        "experimentalObjectRestSpread": true,
        "sourceType": "module"
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "env": {
        "browser": false,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "document": false,
        "navigator": false,
        "window": false
    },
    "rules": {
        // 4 spaces indentation by default
        "indent": [
            "error",
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],

        "curly": [
            "error",
            "multi-line" // Allow e.g. single-line error throwing (http://eslint.org/docs/rules/curly)
        ],

        // eslint-plugin-mocha
        "mocha/no-exclusive-tests": "error",
        "mocha/handle-done-callback": "error"
    },
    "extends": "eslint:recommended",
    "plugins": [
        "mocha"
    ]
}
